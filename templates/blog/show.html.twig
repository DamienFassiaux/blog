{% extends 'base.html.twig' %}

{% block title %}Détail de l'article{% endblock %}

{% block body %}

  <h1 class="display-4 text-center my-5"> {{ articleTwig.title }}</h1>


   <div class="row">

   <div class="col-md-8 mx-auto">
          <div class="card mb-4 shadow-sm">
            <img src="{{articleTwig.image|replace({'600/400' : '1000/300'}) }}" alt="{{articleTwig.title}}">

             <h4 class="text-center"> {{articleTwig.title}} </h4>
            <div class="card-body">
              <p class="card-text"> {{articleTwig.content|striptags}}
              </p>
              <div class="d-flex justify-content-between align-items-center">
          
                <small class="text-muted">{{articleTwig.createdAt|date('d/m/Y') }} à {{ articleTwig.createdAt|date('H:m:s') }}</small>
              </div>
            </div>
          </div>
        </div>
        </div>

{% endblock %}