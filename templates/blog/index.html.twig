                      <a href="{{ path('blog_show', {'id': data.id}) }}" class="btn btn-sm btn-outline-secondary">En savoir plus</a>
                      <a href="{{ path('blog_edit', {'id': data.id}) }}", {" class="btn btn-sm btn-outline-secondary">Modifier</a>
                    </div>
