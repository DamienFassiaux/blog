{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

<h1 class="display-4 text-center my-5"> {{ title }}</h1>


      <div class="row">

      {% for data in articles %}

      {# {{ dump(data)}} #}
        
     

            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
               <img src="{{ asset('uploads/images/' ~ data.image) }}" alt="{{data.title}} ">

                <div class="card-body">

                  <h4 class="text-center"> {{data.title}} </h4> <hr>

                  <p class="card-text">{{ data.content|striptags|slice(0,250) }}...</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group mr-2">
                      <a href="{{ path('blog_show', {'id': data.id}) }}" class="btn btn-sm btn-outline-secondary">En savoir plus</a>
                      <a href="{{ path('blog_edit', {'id': data.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                    </div> 
                    <small class="text-muted">Le {{ data.createdAt|date('d/m/Y') }} à {{ data.createdAt|date('H:m:s') }} dans la catégorie <strong> {{ data.category.title }}</strong></small>
                  </div>
                </div>
              </div>
            </div>

      {% endfor %}

      </div>

{% endblock %}
